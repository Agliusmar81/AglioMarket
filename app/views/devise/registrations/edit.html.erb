<h2>Modifica<%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div> Attualmente in attesa di conferma per: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i> ( lasciare vuoto se non si desidera modificarlo )</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caratteri minimi</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i> ( abbiamo bisogno della tua password attuale per confermare le modifiche )</i><br />
    <%= f.password_field :current_password, autocomplete: "Password attuale" %>
  </div>

  <div class="actions">
    <%= f.submit "Aggiorna" %>
  </div>
<% end %>

<h3>Cancellare il mio account</h3>

<p>Insoddisfatto? <%= button_to "Cancella il mio account", registration_path(resource_name), data: { confirm: "Sei sicuro?" }, method: :delete %></p>

<%= link_to "Torna indietro", :back %>
